{
    "runtime": "Net80",
    "documentGenerator": {
      "fromDocument": {
        "url": "openapi.yaml"
      }
    },
    "codeGenerators": {
      "openApiToCSharpController": {
        "output": "OpenApi.generated.cs",
        "controllerBaseClass": "Microsoft.AspNetCore.Mvc.ControllerBase",
        "generateControllerBaseClass": false,
        "namespace": "ToDo"
      },
      "openApiToTypeScriptClient": {
        "output": "WebUi/src/api/client.ts",
        "template": "Fetch",
        "generateClientClasses": true,
        "generateDtoTypes": true,
        "typeStyle": "Interface"
      }
    }
  }
  